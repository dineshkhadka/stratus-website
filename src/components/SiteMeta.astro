---
const { 
  title,
  description,
  url,
  image,
} = Astro.props

let subtitle = 'A clean and simple New tab page'
---

<!-- open graph -->
<meta property="og:title" content={`${title} - ${subtitle}`}>
<meta property="og:description" content={description}>
<meta property="og:type" content="website">
<meta property="og:url" content={url}>
<meta property="og:image" content={Astro.site ? `${Astro.site}${image}` : image}>

<script src="https://cdn.counter.dev/script.js" data-id="e1def0db-b605-48fd-9723-db564b46e439" data-utcoffset="1"></script>

<!-- page title -->
<title>{title} - {subtitle}</title>
